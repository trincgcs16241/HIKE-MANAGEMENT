<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/black">
        <TextView
            android:id="@+id/title"
            android:text="Add Observation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/goblin_one"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/observation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goblin_one"
            android:background="@drawable/background_boder_3"
            android:padding="20dp"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:hint="Enter observation"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>


        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/goblin_one"
            android:hint="Enter time: "
            android:textStyle="bold"
            android:layout_marginStart="3dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/observation"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/goblin_one"
            android:hint="Choose time"
            android:layout_marginStart="3dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/timeLabel"
            app:layout_constraintTop_toTopOf="@+id/timeLabel"
            app:layout_constraintBottom_toBottomOf="@+id/timeLabel"/>

        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/goblin_one"
            android:hint="Enter date: "
            android:textStyle="bold"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeLabel"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/goblin_one"
            android:hint="Choose date"
            android:layout_marginStart="3dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/dateLabel"
            app:layout_constraintTop_toTopOf="@+id/dateLabel"
            app:layout_constraintBottom_toBottomOf="@+id/dateLabel"/>

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/goblin_one"
            android:background="@drawable/background_boder_3"
            android:textSize="14sp"
            android:hint="Enter comment"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateLabel"/>

        <Button
            android:id="@+id/btnAddExpense"
            android:textColor="@color/black"
            android:text="Add"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/goblin_one"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>