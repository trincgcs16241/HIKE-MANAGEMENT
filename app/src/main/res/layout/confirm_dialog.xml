<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_one"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleConfirm"
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:fontFamily="@font/goblin_one"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/goblin_one"
                android:textColor="#009688"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:text="Name: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleConfirm"/>

            <TextView
                android:id="@+id/nameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:text="Tri"
                app:layout_constraintStart_toEndOf="@id/nameLabel"
                app:layout_constraintTop_toTopOf="@+id/nameLabel"
                app:layout_constraintBottom_toBottomOf="@+id/nameLabel"/>

            <TextView
                android:id="@+id/destinationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="18sp"
                android:fontFamily="@font/goblin_one"
                android:text="Location: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameLabel"/>

            <TextView
                android:id="@+id/destinationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:text="Sai Gon"
                app:layout_constraintStart_toEndOf="@id/destinationLabel"
                app:layout_constraintTop_toTopOf="@+id/destinationLabel"
                app:layout_constraintBottom_toBottomOf="@+id/destinationLabel"/>

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:text="Date: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/destinationLabel"/>

            <TextView
                android:id="@+id/dateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:text="08/09/2022"
                app:layout_constraintStart_toEndOf="@id/dateLabel"
                app:layout_constraintTop_toTopOf="@+id/dateLabel"
                app:layout_constraintBottom_toBottomOf="@+id/dateLabel"/>


            <TextView
                android:id="@+id/isParkingLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:text="Is parking available: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/isParkingValue"
                app:layout_constraintTop_toBottomOf="@+id/dateLabel"/>

            <TextView
                android:id="@+id/isParkingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:text="Yes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/isParkingLabel"
                app:layout_constraintBottom_toBottomOf="@id/isParkingLabel"/>


            <TextView
                android:id="@+id/lengthLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:text="Length: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/isParkingLabel"/>

            <TextView
                android:id="@+id/lengthValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:text="123"
                app:layout_constraintStart_toEndOf="@id/lengthLable"
                app:layout_constraintTop_toTopOf="@+id/lengthLable"
                app:layout_constraintBottom_toBottomOf="@+id/lengthLable"/>

            <TextView
                android:id="@+id/levelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="18sp"
                android:text="Level: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lengthLable"/>

            <TextView
                android:id="@+id/levelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/goblin_one"
                android:layout_marginStart="10dp"
                android:text="5"
                app:layout_constraintStart_toEndOf="@id/levelLabel"
                app:layout_constraintTop_toTopOf="@+id/levelLabel"
                app:layout_constraintBottom_toBottomOf="@+id/levelLabel"/>

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="18sp"
                android:fontFamily="@font/goblin_one"
                android:text="Description: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/levelLabel"/>

            <TextView
                android:id="@+id/descriptionValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/goblin_one"
                android:text="Description"
                app:layout_constraintTop_toBottomOf="@+id/descriptionLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/expenseListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/goblin_one"
                android:text="List observation: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionValue"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_expense_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/expenseListLabel"/>
            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick image"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/rv_expense_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/btnAddImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/goblin_one"
                android:textAllCaps="false"
                android:text="Cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView"/>
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/goblin_one"
                android:textAllCaps="false"
                android:text="Add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>