<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleConfirm"
                android:text="Hike Detail"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/goblin_one"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/goblin_one"
                android:textColor="#009688"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Name: "
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleConfirm"/>

            <TextView
                android:id="@+id/nameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="Dat"
                app:layout_constraintStart_toEndOf="@id/nameLabel"
                app:layout_constraintTop_toTopOf="@+id/nameLabel"
                app:layout_constraintBottom_toBottomOf="@+id/nameLabel"/>

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="15sp"
                android:fontFamily="@font/goblin_one"
                android:text="Location: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameLabel"/>

            <TextView
                android:id="@+id/locationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="Sai Gon"
                app:layout_constraintStart_toEndOf="@id/locationLabel"
                app:layout_constraintTop_toTopOf="@+id/locationLabel"
                app:layout_constraintBottom_toBottomOf="@+id/locationLabel"/>

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:text="Date: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationLabel"/>

            <TextView
                android:id="@+id/dateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="08/09/2022"
                app:layout_constraintStart_toEndOf="@id/dateLabel"
                app:layout_constraintTop_toTopOf="@+id/dateLabel"
                app:layout_constraintBottom_toBottomOf="@+id/dateLabel"/>


            <TextView
                android:id="@+id/isParkingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:text="Is parking available: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateLabel"/>

            <TextView
                android:id="@+id/isParkingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="Yes"
                app:layout_constraintStart_toEndOf="@id/isParkingLabel"
                app:layout_constraintTop_toTopOf="@+id/isParkingLabel"
                app:layout_constraintBottom_toBottomOf="@+id/isParkingLabel"/>


            <TextView
                android:id="@+id/lengthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:text="Length: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/isParkingLabel"/>

            <TextView
                android:id="@+id/lengthValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="12 km"
                app:layout_constraintStart_toEndOf="@id/lengthLabel"
                app:layout_constraintTop_toTopOf="@+id/lengthLabel"
                app:layout_constraintBottom_toBottomOf="@+id/lengthLabel"/>

            <TextView
                android:id="@+id/levelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:fontFamily="@font/goblin_one"
                android:textSize="15sp"
                android:text="Level: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lengthLabel"/>

            <TextView
                android:id="@+id/levelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/goblin_one"
                android:layout_marginStart="10dp"
                android:text="Yes"
                app:layout_constraintStart_toEndOf="@id/levelLabel"
                app:layout_constraintTop_toTopOf="@+id/levelLabel"
                app:layout_constraintBottom_toBottomOf="@+id/levelLabel"/>

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="15sp"
                android:fontFamily="@font/goblin_one"
                android:text="Description"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/levelLabel"/>

            <TextView
                android:id="@+id/descriptionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/goblin_one"
                android:text="Description"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/descriptionLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/observationListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/goblin_one"
                android:text="List observation"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionValue"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvObservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:itemCount="1"
                tools:listitem="@layout/observation_item_layout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/observationListLabel"/>
            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="20dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:fontFamily="@font/goblin_one"
                android:text="Pick image"
                app:layout_constraintTop_toBottomOf="@id/rvObservations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/imgLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/goblin_one"
                android:text="Hike moment"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddImage"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/imgLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>